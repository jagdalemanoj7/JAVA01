package jv19;

public class Pattern3 {
	public static void main(String[] args) {
		int rows=4;
		
		for (int i = 0; i <= rows-1; i++) {
			
			for (int j = rows-1; j < i; j++) {
				System.out.print(" ");
			}
			
			for (int k = rows-1; k < i; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
